<Window x:Class="square.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:square"
        mc:Ignorable="d"
        Title="Корень кв.уравнения" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Width="200" Height="250">
            <Label Content="Введите коэффицент при а"/>
            <TextBox Name="a1"/>

            <Label Content="Введите коэффицент при b"/>
            <TextBox Name="b2"/>

            <Label Content="Введите коэффицент при c"/>
            <TextBox Name="c3"/>

            <Button Width="120" Height="25" Content="Посчитать корни" Margin="0 10 0 0" Click="Button_Click"/>
            <Label Name="roots" Width="200" HorizontalContentAlignment="Center" Margin="0 30 0 0"/>
        </StackPanel>
    </Grid>
</Window>
